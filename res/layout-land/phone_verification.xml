<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1" >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="80dp" >

        <EditText
            android:id="@+id/edit_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/registeration_border"
            android:ems="10"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="15sp" />
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/edit_verification_code"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            >
<Button
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_verification_code"
            
            android:background="@drawable/button"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="Resend"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
        <Button
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/resend"
            android:layout_below="@id/edit_verification_code"
            android:layout_marginLeft="40dp"
            
            android:background="@drawable/button"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="Finish"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/verificationcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Enter your verification code"
        android:textColor="#000000"
        android:textSize="15sp" />

</RelativeLayout>