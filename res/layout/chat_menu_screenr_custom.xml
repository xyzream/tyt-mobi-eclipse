<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <RelativeLayout
        android:id="@+id/even_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >
        
    <ImageView android:id="@+id/usercontainer"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingTop="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/user_icon"/>
    <ImageView
        android:id="@+id/user_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
         android:layout_alignParentRight="true"
        android:background="@drawable/chat_bubble_red"
        android:ems="10"
        android:visibility="gone"
       />
    
    <com.betasoft.emojicon.EmojiconTextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_toLeftOf="@+id/usercontainer"
        android:background="@drawable/chat_bubble_red"
        android:textColor="#FFFFFF"
        android:inputType="textMultiLine"
        android:ems="10"
        android:gravity="center"
       android:paddingLeft="7dp"
       android:paddingRight="10dp"
        android:textSize="15sp" />
    
     <ImageView android:id="@+id/mechanic_icon"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
       android:layout_alignParentLeft="true"
        android:src="@drawable/mechanic_icon"
        android:visibility="gone"/>
    
	<ImageView
        android:id="@+id/mechanic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/chat_bubble_grey"
        android:ems="10"
        android:visibility="gone"/>
     
     <com.betasoft.emojicon.EmojiconTextView
        android:id="@+id/mechanic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:background="@drawable/chat_bubble_grey"
        android:textColor="#FFFFFF"
        android:ems="10"
       android:inputType="textMultiLine"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
        android:textSize="15sp" 
        
        android:visibility="gone"/>

    

     

</RelativeLayout>
   </RelativeLayout>
  
    
  
   
 

 
