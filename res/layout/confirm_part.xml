<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="Confirm part number"
                android:textColor="#8f809f"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/partno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txtCenter"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/registeration_border"
                android:gravity="center"
                android:hint="Enter your part number"
                android:inputType="text"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:textSize="15sp" >

                <requestFocus />
            </EditText>

            <!-- Rahul code starts -->

            <TextView
                android:id="@+id/quantity"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_below="@+id/partno"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/registeration_border"
                android:gravity="center"
                android:text="Enter Quantity"
                android:textColor="#8f809f"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/quantity_txt"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_below="@+id/partno"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/quantity"
                android:background="@drawable/registeration_border"
                android:gravity="center"
                android:inputType="number"
                android:text="1" />

            <!-- code ends -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantity"
                android:layout_centerInParent="true"
                android:gravity="center" >

                <Button
                    android:id="@+id/cnfm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/button5"
                    android:paddingBottom="20dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:text="Confirm"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="35dp"
                    android:layout_toRightOf="@+id/cnfm"
                    android:background="@drawable/button5"
                    android:paddingBottom="20dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:text="Cancel"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>