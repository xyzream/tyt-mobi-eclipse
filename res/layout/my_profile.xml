<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/imagewithtext"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/header"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/profileimage"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/user"
            app:sriv_border_color="#fff"
            app:sriv_border_width="2dip"
            app:sriv_left_bottom_corner_radius="10dip"
            app:sriv_left_top_corner_radius="10dip"
            app:sriv_right_bottom_corner_radius="10dip"
            app:sriv_right_top_corner_radius="10dip" />

        <com.betasoft.ToyotaMobi.fe.setting.ItalicTextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:text="John Smith"
            android:textColor="#222222"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/viewmyprofile"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/imagewithtext"
        android:background="#A8A8A8" >
    </View>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewmyprofile" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/contactno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewyourcontact"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/registeration_border"
                android:ems="10"
                android:hint="Contact"
                android:inputType="number"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="12dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewyouremailid"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/registeration_border"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="12dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etaddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAddress"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/registeration_border"
                android:ems="10"
                android:hint="Address"
                android:inputType="text"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="12dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etchesisno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etaddress"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/registeration_border"
                android:ems="10"
                android:hint="Chesis Number"
                android:inputType="text"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="12dp"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etchesisno"
                    android:background="@drawable/button5"
                    android:text="Save"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/etchesisno"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/button5"
                    android:text="Back"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>